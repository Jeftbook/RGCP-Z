<div class="container">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">Lista de Usuarios</h3>
        {{#if usuarios}}
        {{!-- <div class="col-md-3"> --}}
            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">Email</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each usuarios}}
                    <tr>
                        <td>{{email}}</td>
                        <td>{{nombre}}</td>
                        <td>{{apellido}}</td>
                        <td>
                            <div class="btn-group">
                                <a href="/edit/{{id}}" class="btn btn-warning p-2">
                                    <i class="fa-solid fa-pencil"></i>
                                </a>
                                <a href="/delete/{{id}}" class="btn btn-danger p-2">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr class="table-dark">
                        <td colspan="4">Registro de usuarios</td>
                    </tr>
                </tfoot>
            </table>
            {{!--
        </div> --}}
        {{else}}
        <div class="card text-center mx-auto" style="width: 350px;">
            <div class="card-header">
                <h3>AÃ±adir usuario</h3>
            </div>
            <div class="card-body">
                <p>Resgistrar usuario</p>
                <a href="#" class="btn btn-primary">Ir a Crear</a>
            </div>
        </div>
        {{/if}}
    </div>
</div>